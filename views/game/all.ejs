<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>

    <%- include('../includes/head.ejs') %>
  </head>

  <body>
    <%- include('../includes/nav.ejs') %>

    <main>
      <div>
        <% if (games.length > 0) { %>
        <p class="text-center text-gray-600 mt-2">
          Click a game to edit or delete.
        </p>
        <% } %>
      </div>

      <h2>Welcome <%= user.name %></h2>

      <ul>
        <% for (let game of games) { %>
        <li>
          <span style="font-weight: bold"><%= game.name %></span>

          <span> <%= game.description %> </span>
          <span> Game Masters: <%= game.gameMasters[0] %> </span>
          <a href="/game/edit/<%= game._id %>?edit=true">Edit</a>
        </li>
        <% } %>
      </ul>

      <a href="/game/add"> Create a new game </a>
    </main>

    <%- include('../includes/footer.ejs') %>
  </body>
</html>
